<UserControl x:Class="OhKeyCapsTester.Views.KeyStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Background="{Binding Pressed, Converter={StaticResource KeyStateColorConverter}}" BorderBrush="Black" BorderThickness="2" CornerRadius="8" Margin="3">
            <StackPanel>
                <TextBlock Text="{Binding PressedCount}" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding KeyName}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
